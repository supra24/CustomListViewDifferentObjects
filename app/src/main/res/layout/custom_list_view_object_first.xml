<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_linear_layout_first"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/endPaddingForDate"
    android:paddingStart="@dimen/listItemStartPadding">

    <TextView
        android:id="@+id/list_view_join_i_forward"
        style="@style/pictureListViewTextViewForward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:id="@+id/list_view_join_alpha_forward"
        style="@style/pictureListViewEditTextForward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/list_view_join_a_forward"
        style="@style/pictureListViewEditTextForward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/list_view_join_theta_forward"
        style="@style/pictureListViewEditTextForward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/list_view_join_d_forward"
        style="@style/pictureListViewEditTextForward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="numberSigned"
        tools:ignore="LabelFor" />
</LinearLayout>
